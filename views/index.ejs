<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900">
    <div class="main min-h-screen bg-zinc-900 w-max-[1080px] ml-auto">
      <div class="form p-10 w-full">
        <form action="/create" method="post">
          <input
            class="block w-full rounded-md outline-none text-white px-5 py-2 bg-zinc-800"
            type="text"
            name="title"
            id=""
            placeholder="Title"
          />
          <textarea
            class="block px-5 mt-2 w-full rounded-md outline-none text-white py-2 resize-none bg-zinc-800"
            name="details"
            id=""
            placeholder="Write your task details here"
          ></textarea>
          <input
            class="bg-blue-600 p-2 px-5 py-2 mt-2 text-white rounded-md"
            type="submit"
            name=""
            id=""
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks flex gap-3 flex-wrap p-10">

        <% if(files.length>0){  %>
            <% files.forEach((val)=>{  %>
                <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter"> <%= val %> </h1>
                    
                    <div class="w-full mt-2 flex justify-between items-center">
                        <a href="/file/<%= val %>" class="text-blue-500 inline-block">Read More...</a>
                        <a href="/edit/<%= val %>" class="text-zinc-600">edit</a>
                    </div>
                        
                </div>
                <% })  %>
        <% } else {  %>
            <h2 class="text-zinc-500">No task yet.</h2>
        <% }  %>



       
      </div>
    </div>

    <script src="javascripts/script.js"></script>
  </body>
</html>
